<%- include ('./partials/header') %>
<div class="container">
    <h1 style="text-align:center;margin-top:50px">create a new Department</h1>
    <div class="row">
        
        <div style="width:30%; margin:35px auto">
                <form action="/department" method="post">
                    <div class=" form-group">
                        <input class="form-control" type="text" name="name"placeholder="name" required>
                    </div>
                    <div class=" form-group">
                        <input class="form-control"type="text" name="image"placeholder="image url" required>
                    </div>
                    <div class=" form-group">
                        <input class="form-control"type="text" name="hod"placeholder="HOD" required>
                    </div>
                    <div class=" form-group">
                        <input class="form-control"type="text" name="about"placeholder="description">
                    </div>
                    <div class=" form-group">
                        <button class="btn btn-lg btn-primary btn-block">submit</button>
                    </div>    
                </form>
        </div>
    </div>
</div>